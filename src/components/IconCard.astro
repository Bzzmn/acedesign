---
import type { IconCard } from '@/types/data.ts'

const { id , title, text, icon  } = Astro.props

---

<div class="card w-96 bg-base-100 shadow-xl  ">
  <div class="card-body items-center text-center">
    <img src={icon}  alt="shapes icon" class="h-32" />
    <h2 class="card-title">{title}</h2>
    <p>{text}</p>
  </div>
</div>
