---
import type { Category } from "@/types/data.ts";

interface Props {
  category : Category
}

const { category } = Astro.props

const { id, title, cover, featured, slug } = category
---

<div class="relative w-full  max-w-80 bg-base-100 shadow-xl overflow-hidden">
  <a href=`/category/${slug}`>
    <img class='image object-cover object-center w-full h-full' src= {cover} alt={title} />
    <div class="card-overlay flex items-center justify-center">
      <h2>{title}</h2>
    </div>
  </a>
</div>

<style>

.relative:hover .image {
    transform: scale(1.1);
  }

  .relative:hover .card-overlay {
    background: linear-gradient(0deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.4) 100%);
    opacity: 0.65;
  }

  .relative:hover .see-more {
    display: block; /* Show the button on hover */
  }

  .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    transition: background 0.3s, opacity 0.3s;
    background: linear-gradient(0deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.5) 100%);
  }

  .image {
    transition: transform 0.5s ease-out;
  }

</style>